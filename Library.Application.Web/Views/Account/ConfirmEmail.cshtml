@model bool

<h2>@WebResources.ConfirmEmail_ConfirmEmail</h2>
<div>
    @if (Model)
    {
        <p>
            Thank you for confirming your email. Please <a asp-controller="Account" asp-action="Login">Click here to Log in</a>.
        </p>
    }
    else
    {
        <p>
            Something went wrong. Please contact the admin.
        </p>
    }
</div>