@model Library.Domain.Requests.EditNewsMessageRequest
@{
    ViewData["Title"] = DomainResources.NewsMessage;
}

<h2>@DomainResources.NewsMessage</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="NewsMessages">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(_ => _.Id)
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsShown" class="control-label"></label>
                <input asp-for="IsShown" class="form-control" />
                <span asp-validation-for="IsShown" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <a class="btn btn-warning" asp-action="Index" asp-controller="NewsMessages">@Resources.Cancel <i class="fa fa-times"></i></a>
                <button class="btn btn-primary" type="submit">@Resources.Edit <i class="fa fa-arrow-right"></i></button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
