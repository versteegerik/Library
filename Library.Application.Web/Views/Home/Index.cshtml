@{
    ViewData["Title"] = Resources.Home_Index_PageHeader;
}

<h2>@Resources.Home_Index_PageHeader</h2>

<div class="row">
    <div class="col-md-4">
        <a href="@Url.Action("MyBooks", "Books")" role="button" class="card bg-primary text-white text-center configuration-card">
                <div class="card-body">
                    <i class="fa fa-book configuration-card__icon fa-5x"></i>
                    <h4>@Resources.Home_Index_MyBooks</h4>
                </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="@Url.Action("MyWishlist", "Books")" role="button" class="card bg-primary text-white text-center configuration-card">
            <div class="card-body">
                <i class="fa fa-shopping-cart configuration-card__icon fa-5x"></i>
                <h4>@Resources.Home_Index_MyWishlist</h4>
            </div>
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <a href="@Url.Action("Mail", "Home")" role="button" class="card bg-primary text-white text-center configuration-card">
            <div class="card-body">
                <i class="fa fa-book configuration-card__icon fa-5x"></i>
                <h4>send mail</h4>
            </div>
        </a>
    </div>
</div>