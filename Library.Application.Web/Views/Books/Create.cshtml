@model Library.Domain.Requests.CreateBookRequest
@{
    ViewData["Title"] = "View";
}

<h2>View</h2>

<h4>CreateBookRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Books">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(_ => _.Owner)
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                @*<a class="btn btn-warning" asp-action="Details">@Resources.Cancel</a>
                <button class="btn btn-primary" type="submit">@Resources.Create</button>*@
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
