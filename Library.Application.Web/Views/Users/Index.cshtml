@using Library.Application.Web.Views.Users;
@model ListModel

<h2>@DomainResources.ApplicationUsers <a class="btn btn-primary" asp-action="Create" asp-controller="Users"><i class="fa fa-plus"></i></a></h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">@DomainResources.ApplicationUser_UserName</th>
            <th scope="col">@DomainResources.ApplicationUser_Email</th>
            <th scope="col">@WebResources.Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var applicationUser in Model.ApplicationUsers)
        {
            <tr>
                <td>@applicationUser.UserName</td>
                <td>@applicationUser.Email</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Users" asp-route-id="@applicationUser.Id"><i class="fa fa-pen"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Users" asp-route-id="@applicationUser.Id"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>