@model DeleteBookRequest

<h2>@WebResources.Books_Delete</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <dl>
            <dt class="col-sm-3">@DomainResources.Book_Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>
            <dt class="col-sm-3">@DomainResources.Book_Author</dt>
            <dd class="col-sm-9">@Model.Author</dd>
        </dl>
        <form asp-action="Delete" asp-controller="MyBooks">
            @Html.HiddenFor(_ => _.Id)
            <div class="form-group">
                <a class="btn btn-info" asp-action="Index" asp-controller="MyBooks">@WebResources.Cancel <i class="fa fa-times"></i></a>
                <button class="btn btn-danger" type="submit">@WebResources.Delete <i class="fa fa-trash"></i></button>
            </div>
        </form>
    </div>
</div>
