@using Library.Application.Security

@inject ApplicationSignInManager SignInManager
@inject ApplicationUserManager UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <a id="logoutForm" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/LogOut" title="LogOut">Log out</a>
        </li>
    }
</ul>
